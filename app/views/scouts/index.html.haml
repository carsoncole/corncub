.row
  .col-md-12
    .card
      .card-block
        .card-title
          %h1
            = @unit.name
            Scouts
        .table-responsive
          %table.table.card-text
            %thead
              %tr
                %th Name
                %th Take Orders
                %th Site Sales
                %th Online
                %th Total Sales
                %th Last Sign In
                %th Sign In Count
                - if current_scout.is_admin?
                  %th
                  %th
                  %th

            %tbody
              - @scouts.each do |scout|
                %tr
                  %td
                    %i.fa.fa-child
                    = link_to scout.name, scout_path(scout)
                    - if scout.is_admin?
                      %span.tag.tag-warning
                        Admin
                  %td= link_to number_to_currency(TakeOrder.scout_sales(scout, @active_event), precision: 0), take_orders_path(scout_id: scout.id)
                  %td= link_to number_to_currency(scout.total_site_sales(@active_event), precision: 0), site_sales_path(scout_id: scout.id)
                  %td= link_to number_to_currency(scout.total_online_sales(@active_event), precision: 0), online_sales_path(scout_id: scout.id)
                  %td= number_to_currency(scout.total_sales(@active_event), precision: 0)
                  %td= scout.last_sign_in_at.strftime("%m/%d/%Y %I:%M%p")
                  %td= scout.sign_in_count
                  - if current_scout.is_admin?
                    %td
                      = link_to edit_scout_path(scout) do
                        %span.fa.fa-pencil.fa-lg
                    %td
                      = link_to scout, :method => :delete, :data => { :confirm => 'Are you sure?' } do
                        %span.fa.fa-trash.fa-lg
                    

%br

= link_to new_scout_path do
  %i.fa.fa-plus.fa-lg
