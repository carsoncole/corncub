.row
  .col-md-5
    .card
      .card-block
        = form_for @scout_site_sale do |f|
          - if @scout_site_sale.errors.any?
            #error_explanation
              %h2= "#{pluralize(@scout_site_sale.errors.count, "error")} prohibited this scout_site_sale from being saved:"
              %ul
                - @scout_site_sale.errors.full_messages.each do |msg|
                  %li= msg

          .form-group
            = f.label :scout
            = f.collection_select :scout_id, @unit.scouts.order(:first_name), :id, :name, class: 'form-control'
          
            = f.label :site_sale
            = f.hidden_field :site_sale_id
          .form-group
            = f.label :hours_worked
            = f.text_field :hours_worked, class: 'form-control'
          .actions
            = f.submit 'Save', class: 'btn btn-success'
