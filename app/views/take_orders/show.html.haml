.row
  .col-md-12
    .card
      .card-block
        .row
          .col-md-6
            .card-title
              %h3
                = @take_order.scout.name  
          .col-md-6
            %h3.text-xs-right
              %span.tag.tag-info= @take_order.status.capitalize
            %p.text-xs-right
              = @take_order.customer_name
              %br
              = @take_order.customer_address
              %br
              = @take_order.customer_email

        - if @take_order.purchase_order && current_scout.is_admin?
          %p
            PURCHASE ORDER:
            = link_to @take_order.purchase_order.id, take_order_path(@take_order)
        %table.table
          %thead
            %tr
              %th Product
              %th Quantity
              %th
              %th Price
              %th Total
              %th
          %tbody
            - @line_items.each do |line_item|

              %tr
                %td= link_to line_item.product.name, product_path(line_item.product)
                - if @take_order.status == 'open'
                  = form_for [@take_order, line_item] do |f|
                    .form-group
                      %td
                        = f.number_field :quantity, value: line_item.quantity, class: 'form-control'
                      %td
                        = f.submit 'Update', class: 'btn btn-default'
                - else
                  %td= line_item.quantity
                  %td
                %td= number_to_currency( line_item.product.retail_price )
                %td
                  = number_to_currency( line_item.value )
                %td
                  - if @take_order.status == 'open'
                    = link_to take_order_line_item_path(@take_order, line_item), method: :delete do
                      %i.fa.fa-trash.fa-lg

            - if @take_order.status == 'open'
              %tr
                %td
                  = link_to new_take_order_line_item_path(@take_order) do
                    %i.fa.fa-plus.fa-lg
                    Enter items sold to
                    = @take_order.customer_name

                %td
                %td
                %td
                %td
                %td

            %tr
              %td
              %td
              %td
              %td
              %td= number_to_currency( @take_order.value )
              %td

        - if current_scout.is_admin? && @take_order.status == 'open' && @take_order.line_items.any?
          = button_to 'PAID', take_order_path(@take_order, paid: true), method: :patch, class: 'btn btn-default'
        - if @take_order.money_received_by
          %p
            Money received by:
            = @take_order.money_received_by
            = surround("(",")") do
              = @take_order.money_received_at
.row
  .col-md-2
    %br
    = link_to "Back to Take Orders", take_orders_path

