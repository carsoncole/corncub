.row
  .col-md-12
    .card.card-block
      .card-title
        %h1.h1 Take Orders

      %p.card-text.hidden-print
        Enter all of your door-to-door take orders that you get. 

      %table.table.card-text
        %thead
          %tr
            - if current_scout.is_admin? || current_scout.is_super_admin?
              %th Scout
            %th Customer
            %th Address
            %th Amount
            %th Product
            %th.hidden Status
            %th.visible-print-block Delivered
            %th.hidden-print
            %th.hidden-print


        %tbody
          - total = 0
          - @take_orders.each do |take_order|
            %tr
              - if current_scout.is_admin? || current_scout.is_super_admin?
                %td= take_order.scout.name if take_order.scout
              %td= take_order.customer_name
              %td= take_order.customer_address
              %td
                - total += take_order.value
                = number_to_currency(take_order.value)
              %td
                - take_order.line_items.each do |line_item|
                  = line_item.product.name
                  = surround("(", ")") do
                    = line_item.quantity
                  %br
              %td
                - if take_order.status
                  %span.tag.tag-info= take_order.status.capitalize
              %td.visible-print-block
                %i.fa.fa-square-o.fa-2x
              %td.hidden-print= link_to 'Show', take_order
              %td.hidden-print= link_to 'Destroy', take_order, :method => :delete, :data => { :confirm => 'Are you sure?' } if take_order.status == 'open'
          %tr.hidden-print
            %td
              = link_to new_take_order_path do
                %i.fa.fa-plus.fa-lg
                Enter a Take Order
            %td
            %td
            %td
            %td
            %td.hidden-print
            %td.hidden-print
          %tr
            - if current_scout.is_admin? || current_scout.is_super_admin?
              %td
            %td
            %td
            %td= number_to_currency(total)
            %td
            %td.hidden-print
            %td.hidden-print

      = paginate @take_orders
      %br.hidden-print
      %em.hidden-print * The Status will change to "PAID" when you have turned in money for a Take Order.
