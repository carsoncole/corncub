.row
  .col-md-6
    .card
      .card-block
        .card-title
          %h1= @product.name
        %table.table
          %tr
            %th Retail price:
            %td.text-right= number_to_currency(@product.retail_price)
          %tr
            %th Image URL:
            %td.text-right= @product.url
          - if current_scout.is_unit_admin?
            %tr
              %th Is active:
              %td.text-right
                - if @product.is_active?
                  %i.fa.fa-check
            %tr
              %th Is physical inventory:
              %td.text-right
                - if @product.is_physical_inventory?
                  %i.fa.fa-check
            %tr
              %th Is pack donation:
              %td.text-right
                - if @product.is_pack_donation?
                  %i.fa.fa-check
            %tr
              %th Is sourced from BSA:
              %td.text-right
                - if @product.is_sourced_from_bsa?
                  %i.fa.fa-check
          %tr
            %th ID:
            %td.text-right= @product.id
        - if @product.event_id && current_scout.is_unit_admin?
          = link_to 'Edit', edit_product_path(@product)