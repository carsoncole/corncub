.row
  .col-md-6
    .card
      .card-block
        .card-title
          %h1= @product.name
        %table.table
          %tr
            %th Event:
            %td.text-xs-right= @product.event.name
          %tr
            %th Retail price:
            %td.text-xs-right= number_to_currency(@product.retail_price)
          %tr
            %th Image URL:
            %td.text-xs-right= @product.url

          %tr
            %th Is active:
            %td.text-xs-right
              - if @product.is_active?
                %i.fa.fa-check
          %tr
            %th Is physical inventory:
            %td.text-xs-right
              - if @product.is_physical_inventory?
                %i.fa.fa-check
          %tr
            %th Is pack donation:
            %td.text-xs-right
              - if @product.is_pack_donation?
                %i.fa.fa-check
          %tr
            %th Is sourced from BSA:
            %td.text-xs-right
              - if @product.is_sourced_from_bsa?
                %i.fa.fa-check
        = link_to 'Edit', edit_product_path(@product)
        \|
        = link_to 'All products', products_path


