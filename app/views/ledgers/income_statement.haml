.row
  .col-md-12
    %h3
      .visible-print-inline= @active_event.name
      Income Statement

    .row
      .col-md-6
        .card
          .card-block
            .card-title
              %h5 Sales

            %table.table.card-text
              %tr
                %td Site Sale Product Sales
                %td.text-xs-right= number_to_currency(@site_sales)
              %tr
                %td Take Order Sales
                %td.text-xs-right= number_to_currency(@take_orders)
              %tr
                %td Site Sale Donations
                %td.text-xs-right= number_to_currency(@site_sale_donations)
              %tr
                %td Take Order Donations
                %td.text-xs-right= number_to_currency(@take_order_donations)
              %tr
                %td Online Sales
                %td.text-xs-right= number_to_currency(@online_sales)
              %tr
                %th.top.bottom Total
                %th.top.bottom.text-xs-right= number_to_currency(@total_sales)

      .col-md-6
        .card
          .card-block
            .card-title
              %h5 Expenses

            %table.table.card-text
              %tr
                %td Cost of goods sold
                %td.text-xs-right= number_to_currency(@total_cost_of_goods_sold)
              %tr
                %td Pack prizes
                %td.text-xs-right= number_to_currency(@pack_selected_prizes)
              %tr
                %td Other expenses
                %td.text-xs-right= number_to_currency(0)
              %tr
                %th.top.bottom Total
                %th.top.bottom.text-xs-right= number_to_currency(@total_expenses)

      .col-md-6
        .card
          .card-block
            .card-title
              %h5 Net

            %table.table.card-text
              %tr
                %th.top.bottom-double Net Income
                %th.top.bottom-double.text-xs-right= number_to_currency(@total_sales - @total_expenses)

    .small.text-muted.visible-print-block= nice_date_time(Time.now)