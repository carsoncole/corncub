.row
  .col-md-6
    .card
      .card-block
        .card-title
          %h1.text-xs-center Top 5 Sellers
          %h4.text-xs-center= @active_event.name

        - if @top_sellers.any?
          
          %table.table
            - @top_sellers[0..4].each do |top_seller|
              - scout = Scout.find(top_seller[0])
              %tr
                %th= scout.name
                %td.text-xs-right= number_to_currency(top_seller[1], precision: 0)
        - else
          %p.text-xs-center No sales posted yet.
