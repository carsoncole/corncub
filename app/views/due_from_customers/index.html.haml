.row
  .col-md-12
    .card
      .card-block
        %h2.card-title         
          Due From Customers
        %table.table.table-sm.card-text
          %tr
            %th Envelope
            %th
            %th Scout
            %th Customer
            %th Amount
          - @due_from_customers.each do |due|
            %tr
              %td= due.take_order.envelope.name if due.take_order
              %td= link_to "Take Order ##{due.take_order_id}", take_order_path(due.take_order_id) if due.take_order_id
              %td= due.take_order.envelope.scout.name
              %td= due.take_order.customer_name if due.take_order
              %td= number_to_currency(due.amount)

          %tr
            %td(colspan=4)
            %td= number_to_currency(@due_from_customers.sum(:amount))