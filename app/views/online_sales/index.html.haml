.row
  .col-md-12
    .card
      .card-block
        .card-title 
          %h1 Online Sales
        %p All sales that are done on the Trails-End website using your Scout code will show up here.

        %table.table
          %thead
            %tr
              - if current_scout.is_admin?
                %th Scout
                %th Event
              %th Order date
              %th Customer name
              %th Description
              %th Amount
              - if current_scout.is_admin?
                %th
                %th
                %th

          %tbody
            - @online_sales.each do |online_sale|
              %tr
                - if current_scout.is_admin?
                  %td= online_sale.scout.name
                  %td= online_sale.event.name
                %td= online_sale.order_date
                %td= online_sale.customer_name
                %td= online_sale.description
                - if current_scout.is_admin?
                  %td= online_sale.amount
                  %td= link_to 'Show', online_sale
                  %td= link_to 'Edit', edit_online_sale_path(online_sale)
                  %td= link_to 'Destroy', online_sale, :method => :delete, :data => { :confirm => 'Are you sure?' }

        %br

        = link_to 'New Online sale', new_online_sale_path if current_scout.is_admin?
