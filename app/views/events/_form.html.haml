.row
  .col-md-6
    .card
      .card-block
        .card-title
          %h3
            Event

        = form_for @event do |f|
          - if @event.errors.any?
            #error_explanation
              %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
              %ul
                - @event.errors.full_messages.each do |msg|
                  %li= msg

          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
          .form-group
            = f.label :unit_commission_percentage
            %p.small.text-muted Enter '35' for 35%.
            = f.text_field :unit_commission_percentage, class: 'form-control'
          .form-group
            = f.label :online_commission_percentage
            %p.small.text-muted Enter '35' for 35%.
            = f.text_field :online_commission_percentage, class: 'form-control'
          .form-group
            = f.label :is_active
            = f.check_box :is_active, class: 'form-control'
          .form-group
            = f.label :are_prizes_enabled
            = f.check_box :is_prizes_enabled, class: 'form-control'

          .form-group
            = f.label :prize_cart_ordering_starts_at
            %p.text-muted This date enables/disables the 'Order' prize cart button
            = f.date_select :prize_cart_ordering_starts_at, {include_blank: true}, class: 'form-control'
          .form-group
            = f.label :prize_cart_ordering_ends_at
            %p.text-muted This date enables/disables the 'Order' prize cart button
            = f.date_select :prize_cart_ordering_ends_at, {include_blank: true}, class: 'form-control'
          .form-group
            = f.label :take_orders_deadline_at
            %p.text-muted Take Orders can not be entered after this time
            = f.datetime_select :take_orders_deadline_at, {include_blank: true},  class: 'form-control'
          .form-group
            = f.label :number_of_top_sellers
            = f.number_field :number_of_top_sellers, class: 'form-control'
          .actions
            = f.submit 'Save', class: 'btn btn-default'
