.row
  .col-md-12
    .card
      .card-block
        .card-title
          %h1 Accounts

        %table.table
          %thead
            %tr
              %th Name
              %th Balance
              %th.text-xs-center Take Orders
              %th.text-xs-center Site Sales
              %th.text-xs-center Bank Depositable
              %th
          %tbody
            - @accounts.each do |account|
              %tr
                %td= link_to account.name, ledgers_path(account_id: account.id)
                %td= number_to_currency(account.balance)
                %td.text-xs-center
                  - if account.is_take_order_eligible?
                    %i.fa.fa-check
                %td.text-xs-center
                  - if account.is_site_sale_eligible?
                    %i.fa.fa-check
                %td.text-xs-center
                  - if account.is_bank_account_depositable?
                    %i.fa.fa-check
                %td
                  = link_to edit_account_path(account) do
                    %i.fa.fa-pencil.fa-lg
                %td
                  = link_to account, :method => :delete, :data => { :confirm => 'Are you sure?' } do
                    %i.fa.fa-trash.fa-lg

        %br

        = link_to new_account_path do
          %i.fa.fa-plus.fa-lg
