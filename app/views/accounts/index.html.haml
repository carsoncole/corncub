.row
  .col-md-12
    .card
      .card-block
        .card-title
          %h1 Accounts

        %table.table
          %thead
            %tr
              %th Name
              %th Balance
              %th
              %th
          %tbody
            - @accounts.each do |account|
              %tr
                %td= link_to account.name, account
                %td= number_to_currency(account.balance)
                %td= link_to 'Edit', edit_account_path(account)
                %td= link_to 'Destroy', account, :method => :delete, :data => { :confirm => 'Are you sure?' }

        %br

        = link_to new_account_path do
          %i.fa.fa-plus.fa-lg
