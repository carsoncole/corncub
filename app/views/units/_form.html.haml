= form_for @unit do |f|
  - if @unit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@unit.errors.count, "error")} prohibited this unit from being saved:"
      %ul
        - @unit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :street_address
    = f.text_field :street_address_1
  .field
    = f.label :street_address
    = f.text_field :street_address_2
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.select :state_postal_code, StatesHelper.us_states
  .field
    = f.label :zip_code
    = f.text_field :zip_code

  .actions
    = f.submit 'Save'
