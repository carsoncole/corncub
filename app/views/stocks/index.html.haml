.row
  .col-md-12
    .card
      .card-block
        .card-title
          %h3 Stocks

        %table.table
          %thead
            %tr
              %th Product
              %th Quantity
              %th

          %tbody
            - @stocks.each do |stock|
              %tr
                %td= stock.product.name
                %td= stock.quantity
                %td= link_to 'Destroy', stock, :method => :delete, :data => { :confirm => 'Are you sure?' }
            %tr
              %td
                = link_to new_stock_path do
                  %i.fa.fa-plus.fa-lg
              %td
              %td

