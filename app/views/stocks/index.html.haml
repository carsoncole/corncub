.row
  .col-md-12
    .card
      .card-block
        .card-title
          %h1 Stock

        %table.table
          %thead
            %tr
              %th Product
              %th Quantity
              %th Location
              %th Retail Price
              %th Retail Value
              %th

          %tbody
            - total = 0
            - @stocks.each do |stock|
              %tr
                %td= stock.product.name
                %td= stock.quantity
                %td= stock.location.titleize if stock.location
                %td= number_to_currency(stock.product.retail_price)
                %td
                  - total += stock.quantity * stock.product.retail_price
                  = number_to_currency(stock.quantity * stock.product.retail_price)
                %td= link_to 'Destroy', stock, :method => :delete, :data => { :confirm => 'Are you sure?' }
            %tr
              %td
                = link_to new_stock_path do
                  %i.fa.fa-plus.fa-lg
              %td
              %td
              %td
              %td= number_to_currency(total)
              %td

