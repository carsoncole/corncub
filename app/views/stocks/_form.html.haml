.row
  .col-md-12
    .card
      .card-block
        .card-title
          %h3 Stock Movement
        = form_for @stock do |f|
          - if @stock.errors.any?
            #error_explanation
              %h2= "#{pluralize(@stock.errors.count, "error")} prohibited this stock from being saved:"
              %ul
                - @stock.errors.full_messages.each do |msg|
                  %li= msg

          .form-group
            .field
              = f.label :product
              = f.collection_select :product_id, @products, :id, :name, {prompt: "Select a Product"}, {class: 'form-control'}
          .form-group
            .field
              = f.label :quantity
              = f.number_field :quantity, class: 'form-control'
          .form-group
            = f.label :location
            %br
            = f.select :location, options_for_select(Stock::LOCATIONS), {}, class: 'form-control'
          .form-group
            = f.label :description
            = f.text_field :description, class: 'form-control'
          .form-group
            = f.label :movement_with_warehouse
            %p.small Check her if this a movement with the warehouse
            = f.check_box :movement_with_warehouse,  class: 'form-control'
          .actions
            = f.submit 'Save', class: 'btn btn-green'
