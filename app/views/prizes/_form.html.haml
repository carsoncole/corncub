= form_for @prize do |f|
  - if @prize.errors.any?
    #error_explanation
      %h2= "#{pluralize(@prize.errors.count, "error")} prohibited this prize from being saved:"
      %ul
        - @prize.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
