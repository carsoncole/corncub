- if @active_event && @active_event.is_prizes_enabled? && @active_event.prizes?
  .card
    .card-body
      .card-title
        = image_tag 'despic_me_happy.gif', class: "img-fluid"
        %br
        %br
        %h5.text-center
          Prizes to Earn



      %table.table.table-sm.card-text
        %tr.small
          %td Prize
          %td.text-right Sales level
        - @prizes.each do |prize|
          %tr
            %td= prize.name
            %td.text-right= number_to_currency(prize.sales_amount)

      - if @active_event.prize_cart_ordering_starts_at && @active_event.prize_cart_ordering_starts_at < Time.now && @active_event.prize_cart_ordering_ends_at > Time.now
        %hr
        %div.card-text
          = link_to prize_cart_path(current_scout.prize_cart(@active_event)) do
            Order prizes
            %i.fa.fa-long-arrow-right
            %i.fa.fa-shopping-cart
            Prize Cart
    .card-footer.text-center
      = link_to "See all Prizes", prizes_path
  %br