- if current_scout.is_site_sales_admin?
  .card
    .card-block.site_sales_cash
      %h5.card-title Site Sales Cash

      %p.card-text
        Balance:
        = number_to_currency(@site_sales_cash)

      - if @site_sales_cash > 0
        %p.card-text.small
          Please deposit cash as soon as possible and record the deposit in
          = Rails.configuration.application_name
          and we will send an email notification to the Unit Treasurer.
        %p.card-text  
          = link_to "Record a deposit", bank_deposit_path

  %br
