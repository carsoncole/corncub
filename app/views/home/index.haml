- if @active_event

  - if current_scout.is_unit_admin? && !@active_event.products?
    .row
      .col-md-12
        = render 'set_up_products'

  - if ( current_scout.is_unit_admin? || current_scout.is_prizes_admin? ) && !@active_event.prizes? && @active_event.is_prizes_enabled?
    .row
      .col-md-12
        = render 'set_up_prizes'

.row
  .col-md-4
    - if current_scout.admin?
      = render 'get_started' unless @active_event && @active_event.set_up?
    = render 'sales'
    = image_tag "scout-sales-script.jpg", class: 'img-fluid img-rounded m-x-auto'
  .col-md-4

    - if @active_event
      = render 'top_sellers'
      = render 'prizes'
      = render 'site_sales_cash'
      = render 'take_orders_cash'
  .col-md-4
    - if @active_event
      - if @active_event.is_site_sales_enabled?
        = render 'site_sales'
      = render 'important_dates'
      / = render 'quick_links'
      = render 'selling-tips'
      = render 'resources'